Sub JumpWater //跳河
    Call GetXY()
    if intX < tarX - 20 or intX > tarX + 20 then //X轴偏远才跳河
        // if intY >= 100 and intY < 114 Then //可以跳河的地方
            DelayRandom 73,80
            tarX = intX
            tarY = 112
            tolerance = 4
            Call Move()
        // End If

        if intY == 112 Then //开跳
            DelayRandom 73,80
            KeyDown Down
            DelayRandom 119,121
            KeyDown Space
            DelayRandom 120,122
            KeyUp Space
            DelayRandom 38,39
            KeyUp Down
            DelayRandom 877,886
        End If

        tarX = -60
        tarY = 85
        tolerance = 3
        Call Judge() //顺便帮判断一下是否成功
    End If
End Sub

Sub PreMove //提前移动到特定地点
    min = GetTimeStamp() - fountainTime - 55
    minType = 0 //默认喷泉
    if min > GetTimeStamp() - ReleaseTime1 - 12 then
        min = GetTimeStamp() - ReleaseTime1 - 12
        minType = 1
    end
    if min > GetTimeStamp() - ReleaseTime2 - 12 then
        min = GetTimeStamp() - ReleaseTime2 - 12
        minType = 2
    end
    if min > GetTimeStamp() - seedTime1 - 16 then
        min = GetTimeStamp() - seedTime1 - 16
        minType = 3
    end
    if min > GetTimeStamp() - seedTime2 - 16 then
        min = GetTimeStamp() - seedTime2 - 16
        minType = 4
    end

    if minType = 0 then
        tarX = 19
        tarY = 99
        tolerance = 4
        Call Move()
    else if minType = 1 then
        tarX = -60 //这样判断是否要跳河
        Call JumpWater() //无条件Y跳河
        tarX = -60
        tarY = 85
        tolerance = 4
        Call Move()
    else if minType = 2 then
        tarX       = -27
        tarY       = 99
        tolerance  = 4
        Call Move()
    else if minType = 3 then
        tarX       = -33
        tarY       = 112
        tolerance  = 6
        Call Move()
    else if minType = 4 then
        tarX       = -60
        tarY       = 112
        tolerance  = 6
        Call Move()
    End If
End Sub


