Sub JumpWater //跳河 Ver2.0如果在另一个传送门就直接上
    Call GetXY()
    if intX == 52 and intY == 80 then //如果人在传送门处,直接按上
        DelayRandom 87,92
        KeyDown Up
        DelayRandom 120,122
        KeyUp Up
        DelayRandom 231,234
    else if intX < tarX - 20 or intX > tarX + 20 or intY == 112 then //X轴偏远才跳河
        if intY >= 99 and intY < 112 Then //下走的地方
            DelayRandom 73,80
            tarX = intX
            tarY = 112
            tolerance = 4
            Call Move()
        End If

        if intY == 112 Then //开跳
            DelayRandom 73,80
            KeyDown Down
            DelayRandom 119,121
            KeyDown Space
            DelayRandom 120,122
            KeyUp Space
            DelayRandom 38,39
            KeyUp Down
            DelayRandom 877,886
        End If

        tarX = -60
        tarY = 85
        tolerance = 3
        Call Judge() //顺便帮判断一下是否成功
    End If
End Sub

Sub PreMove //提前移动到特定地点 Ver2.0 提前移动先judge,不然怕重复移动
    min = fountainTime + 55
    minType = 0 //默认喷泉
    if min > ReleaseTime1 + 13 then
        min = ReleaseTime1 + 13
        minType = 1
    end if
    if min > ReleaseTime2 + 13 then
        min = ReleaseTime2 + 13
        minType = 2
    end if
    if min > seedTime1 + 18 then
        min = seedTime1 + 18
        minType = 3
    end if

    if minType = 0 then
        tarX = 19
        tarY = 99
        tolerance = 4
        Call Judge()
        if tolLoc <= 0 then
            Call Move()
        End If
    else if minType = 1 then
        tarX = -60 //这样判断是否要跳河
        Call JumpWater() //无条件Y跳河
        tarX = -60
        tarY = 85
        tolerance = 4
        Call Judge()
        if tolLoc <= 0 then
            Call Move()
        End If
    else if minType = 2 then
        tarX       = -27
        tarY       = 99
        tolerance  = 4
        Call Judge()
        if tolLoc <= 0 then
            Call Move()
        End If
    else if minType = 3 then
        tarX       = -33
        tarY       = 112
        tolerance  = 6
        Call Judge()
        if tolLoc <= 0 then
            Call Move()
        End If
    End If
End Sub


