Sub HDDaily //领HD的奖励  Ver1.1 周日的问题处理,
    while 1>0
        FindPic x1,y1,xEnd,yEnd,"E:\MHImg\UI\Cash\HD_Mark1.bmp|E:\MHImg\UI\Cash\HD_Mark2.bmp",000000,1.00,0,logoX,logoY
        if logoX >= 0 Then //HD页面打开了
            for 4 //4次
                while 1>0
                    FindPic x1,y1,xEnd,yEnd,"E:\MHImg\UI\OK.bmp",000000,1.00,0,intX,intY
                    if intX >= 0 Then //找到了OK
                        KeyPress Enter
                        break
                    else
                        MoveTo logoX+100,logoY
                        LeftClick
                        DelayRandom 139,142
                    End If
                Wend
            Next

            while 1>0 //关闭HD
                FindPic x1,y1,xEnd,yEnd,"E:\MHImg\UI\Cash\HD_Mark1.bmp|E:\MHImg\UI\Cash\HD_Mark2.bmp",000000,1.00,0,intX,intY
                if intX >= 0 Then
                    KeyPress Esc
                else
                    break
                End If
            Wend

            break
        else
            FindPic x1,y1,xEnd,yEnd,"E:\MHImg\UI\Cash\EntryCash.bmp",000000,1.00,0,intX,intY
            if intX >= 0 Then
                MoveTo intX+40,intY
                LeftClick
                DelayRandom 439,442
                MoveTo intX+40,intY-35
                LeftClick
                DelayRandom 439,442
            else
                KeyPress ]
                DelayRandom 439,442
            End If
        End If
    Wend
End Sub
