Sub Fart //放熊屁,CD没好就放其他技能
    while 1 > 0

        FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_Fart.bmp",000000,1.0,0,intX,intY	//找熊屁
        if intX >= 0 or FartOK == 1 Then
            FartOK = 0
            Timer 1,1,5000
            KeyDown D
            DelayRandom 623,650
            KeyUp D
            DelayRandom 5,6
            break
        else //放其他小技能
            FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_Spider.bmp",000000,1.00,0,intX,intY
            if intX >= 0 Then //找蜘蛛
                KeyDown H
                DelayRandom 105,107
                KeyUp H
                DelayRandom 929,939
            else
                FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_Lieyang.bmp",000000,1.00,0,intX,intY
                if intX >= 0 Then //找烈阳
                    KeyDown Y
                    DelayRandom 105,107
                    KeyUp Y
                    DelayRandom 811,813
                else
                    FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_diningTable.bmp",000000,1.00,0,intX,intY
                    if intX >= 0 Then //找打翻
                        KeyDown V
                        DelayRandom 105,107
                        KeyUp V
                        DelayRandom 1529,1639
                    else
                        FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_Whister.bmp",000000,1.00,0,intX,intY
                        if intX >= 0 Then //找哨子
                            KeyDown 5
                            DelayRandom 105,107
                            KeyUp 5
                            DelayRandom 72,74
                            KeyDown B
                            DelayRandom 97,99
                            KeyUp B
                            DelayRandom 312,324
                            KeyDown C
                            DelayRandom 214,217
                            KeyUp C
                            DelayRandom 879,891
                        End If
                    End If
                End If
            End If
        End If

        FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_V2.bmp",000000,1.00,0,intX,intY	//找V2
        if intX >= 0 Then //找到V2就放,瞬手的事
            KeyDown W
            DelayRandom 122,124
            KeyUp W
            DelayRandom 402,412
        End If

        DelayRandom 5,10
    Wend
End Sub

