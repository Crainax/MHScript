GetScreenResolution intX, intY
if intX > intY then //横放屏幕
    x1 = 700
    y1 = 550
    x2 = 1650
    y2 = 850
    x3 = 1500
    y3 = 1250
    xEnd = 2560
    yEnd = 1440
else //竖放屏幕
    x1 = 0
    y1 = 1650
    x2 = 300
    y2 = 1900
    x3 = 800
    y3 = 2300
    xEnd = 1440
    yEnd = 2560
End If
//无限循环
Landing        = 1
Rotation       = 0  //一开始是顺时针
RotateTimes    = 0  //方向满5次才转向
stoneSteleTime = 0  //上次轮回的时间
V12Time        = 0  //上次V12的时间
while 1 > 0

    FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_V1.bmp",000000,1.00,0,intX,intY	//找V1
    a = GetTimeStamp() - V12Time
    if intX >= 0 and a > 4 Then //找到V1就放,瞬手的事
        KeyDown Q
        DelayRandom 111,113
        KeyUp Q
        DelayRandom 714,722
        V12Time = GetTimeStamp()
    End If

    FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_Water.bmp",000000,1.00,0,intX,intY
    if intX >= 0 //最优先放喷泉
        tarX = -63
        tarY = 108
        tolerance = 4
        Call Move_Bild()
        DelayRandom 56,58
        KeyDown Right
        DelayRandom 112,115
        KeyUp Right
        DelayRandom 106,109
        KeyDown Down
        DelayRandom 95,96
        KeyDown 1
        DelayRandom 194,196
        KeyUp 1
        DelayRandom 66,67
        KeyUp Down
        DelayRandom 612,621
        if Rotation == 0 then // 顺时针
            Landing = 2
        else
            Landing = 0
        End If
    End If

    a = GetTimeStamp() - stoneSteleTime
    if a > 570 then //可以放轮了
        TracePrint 目标原地放轮
        DelayRandom 56,58
        KeyDown O
        DelayRandom 137,139
        KeyUp O
        DelayRandom 736,747
        stoneSteleTime = GetTimeStamp()
        TracePrint 轮放好了
    End If

    FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_Fly.bmp",000000,1.00,0,intX,intY
    if intX >= 0 //进入飞行模式
        Call Fly1()
        if Rotation == 0 then // 顺时针
            Landing = 7
        else
            Landing = 3
        End If
    else //方便进入下一个循环

        FindPic x3,y3,xEnd,yEnd,"E:\MHImg\BT_V2.bmp",000000,1.00,0,intX,intY	//找V2
        a = GetTimeStamp() - V12Time
        if intX >= 0 and a > 4 Then //找到V2就放,瞬手的事
            KeyDown W
            DelayRandom 122,124
            KeyUp W
            DelayRandom 402,412
            V12Time = GetTimeStamp()
        End If

        //1:喷泉点,3:右下角,5:右下角2楼,7:右上角,9:左上角
        if Landing%2 == 0 Then //偶数时放技能和幽暗
            Call Spell() //放技能
            Call DarkAttack() //幽暗+攻击
            if Rotation == 0 then // 顺时针
                Landing = Landing + 1
            else
                Landing = Landing - 1
            End If

            if Landing < 0 Then //到边界了就去另一个边界
                Landing = 9
            End If
        Else //换地!
            RotateTimes = RotateTimes + 1
            If RotateTimes >= 5 Then //满5次方向就换个方向
                If Rotation == 1 Then
                    Rotation = 0
                else
                    Rotation = 1
                End If
                RotateTimes = 0
            End If

            if Landing == 1 Then
                tarX = -63
                tarY = 108
                tolerance = 4
            Else If Landing == 3 Then
                tarX = 17
                tarY = 122
                tolerance = 4
            Else If Landing == 5 Then
                tarX = 17
                tarY = 108
                tolerance = 4
            Else If Landing == 7 Then
                tarX = 17
                tarY = 74
                tolerance = 4
            else
                tarX = -63
                tarY = 83
                tolerance = 4
            End If
            if Rotation == 0 then // 顺时针
                Landing = Landing + 1
            else
                Landing = Landing - 1
            End If
            if Landing > 9 Then //到边界了就去另一个边界
                Landing = 0
            End If
            Call Move_Bild()
        End If
    End If


Wend

